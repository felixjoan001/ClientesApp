<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.vendor.VendorFragment">

        <!-- RecyclerView para mostrar la lista de proveedores -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVendors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- BotÃ³n para crear un nuevo proveedor -->
        <Button
            android:id="@+id/createVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/crear"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewVendors"
            app:layout_constraintVertical_bias="0.651" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>